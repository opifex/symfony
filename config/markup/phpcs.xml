<?xml version="1.0"?>
<ruleset name="Markup">
  <description>Markup Coding Standard</description>

  <arg name="encoding" value="utf-8"/>
  <arg name="extensions" value="php"/>
  <arg name="tab-width" value="4"/>
  <arg name="colors"/>

  <file>../../bin</file>
  <file>../../config</file>
  <file>../../public</file>
  <file>../../src</file>
  <file>../../tests/Functional</file>
  <file>../../tests/Unit</file>

  <rule ref="PSR12"/>

  <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
  <rule ref="Generic.CodeAnalysis.EmptyPHPStatement"/>
  <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
  <rule ref="Generic.Commenting.Fixme"/>
  <rule ref="Generic.Commenting.Todo"/>
  <rule ref="Generic.ControlStructures.DisallowYodaConditions"/>
  <rule ref="Generic.Metrics.NestingLevel"/>
  <rule ref="Generic.NamingConventions.AbstractClassNamePrefix"/>
  <rule ref="Generic.NamingConventions.InterfaceNameSuffix"/>
  <rule ref="Generic.NamingConventions.TraitNameSuffix"/>
  <rule ref="Generic.PHP.BacktickOperator"/>
  <rule ref="Generic.PHP.NoSilencedErrors"/>
  <rule ref="Generic.PHP.RequireStrictTypes"/>
  <rule ref="Squiz.NamingConventions.ValidVariableName"/>
  <rule ref="Squiz.PHP.DisallowSizeFunctionsInLoops"/>
  <rule ref="Squiz.PHP.LowercasePHPFunctions"/>
  <rule ref="Squiz.PHP.NonExecutableCode"/>

  <rule ref="Generic.CodeAnalysis.AssignmentInCondition">
    <exclude-pattern>../config/*</exclude-pattern>
  </rule>

  <rule ref="Generic.Metrics.CyclomaticComplexity">
    <exclude-pattern>../config/*</exclude-pattern>
    <exclude-pattern>../tests/*</exclude-pattern>
    <properties>
      <property name="complexity" value="12"/>
      <property name="absoluteComplexity" value="12"/>
    </properties>
  </rule>

  <rule ref="Generic.PHP.ForbiddenFunctions">
    <exclude-pattern>../config/*</exclude-pattern>
    <properties>
      <property name="forbiddenFunctions" type="array">
        <element key="create_function" value="null"/>
        <element key="dd" value="null"/>
        <element key="debug_print_backtrace" value="null"/>
        <element key="die" value="null"/>
        <element key="echo" value="null"/>
        <element key="error_log" value="null"/>
        <element key="eval" value="null"/>
        <element key="exit" value="null"/>
        <element key="get_class" value="null"/>
        <element key="global" value="null"/>
        <element key="goto" value="null"/>
        <element key="print" value="null"/>
        <element key="print_r" value="null"/>
        <element key="sizeof" value="count"/>
        <element key="var_dump" value="null"/>
      </property>
    </properties>
  </rule>

  <rule ref="Generic.NamingConventions.UpperCaseConstantName">
    <severity>0</severity>
  </rule>

  <rule ref="Squiz.Functions.MultiLineFunctionDeclaration.EmptyLine">
    <severity>0</severity>
  </rule>

  <rule ref="Squiz.NamingConventions.ValidVariableName.PrivateNoUnderscore">
    <severity>0</severity>
  </rule>

  <rule ref="Squiz.NamingConventions.ValidVariableName.PublicHasUnderscore">
    <severity>0</severity>
  </rule>
</ruleset>
