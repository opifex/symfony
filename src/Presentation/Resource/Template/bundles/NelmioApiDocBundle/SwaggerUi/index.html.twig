{% extends '@!NelmioApiDoc/SwaggerUi/index.html.twig' %}

{% block meta %}
    {{ parent() }}
{% endblock meta %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 10px 0;
        }

        header,
        .swagger-ui .servers-title,
        .swagger-ui .info .title .version-stamp {
            display: none;
        }

        #swagger-ui.api-platform .information-container.wrapper {
            margin-bottom: 0;
        }

        #swagger-ui.api-platform select,
        .swagger-ui .opblock .opblock-summary-path,
        .swagger-ui .opblock .parameter__name,
        .swagger-ui .opblock .parameters-container,
        .swagger-ui .opblock .response-col_description {
            font-size: 14px;
            font-weight: normal;
        }

        .swagger-ui .model-example td,
        .swagger-ui .model-example span,
        .swagger-ui .highlight-code code,
        .swagger-ui .opblock .parameters-col_name > div {
            font-weight: normal;
        }
    </style>
{% endblock stylesheets %}

