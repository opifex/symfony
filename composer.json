{
    "name": "opifex/symfony",
    "description": "An example application using Symfony Framework",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.5",
        "ext-amqp": "*",
        "ext-apcu": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-pcntl": "*",
        "ext-pdo_pgsql": "*",
        "ext-redis": "*",
        "ext-xsl": "*",
        "ext-zip": "*",
        "doctrine/doctrine-bundle": "^3.2",
        "doctrine/doctrine-migrations-bundle": "^4.0",
        "doctrine/orm": "^3.6",
        "dragonmantank/cron-expression": "^3.6",
        "lcobucci/jwt": "^5.6",
        "nelmio/api-doc-bundle": "^5.9",
        "symfony/amqp-messenger": "8.0.*",
        "symfony/asset": "8.0.*",
        "symfony/console": "8.0.*",
        "symfony/doctrine-messenger": "8.0.*",
        "symfony/dotenv": "8.0.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "8.0.*",
        "symfony/http-client": "8.0.*",
        "symfony/intl": "8.0.*",
        "symfony/lock": "8.0.*",
        "symfony/mailer": "8.0.*",
        "symfony/messenger": "8.0.*",
        "symfony/monolog-bundle": "^4.0",
        "symfony/notifier": "8.0.*",
        "symfony/property-access": "8.0.*",
        "symfony/rate-limiter": "8.0.*",
        "symfony/runtime": "8.0.*",
        "symfony/scheduler": "8.0.*",
        "symfony/security-bundle": "8.0.*",
        "symfony/serializer": "8.0.*",
        "symfony/stopwatch": "8.0.*",
        "symfony/translation": "8.0.*",
        "symfony/twig-bundle": "8.0.*",
        "symfony/uid": "8.0.*",
        "symfony/validator": "8.0.*",
        "symfony/webhook": "8.0.*",
        "symfony/workflow": "8.0.*",
        "symfony/yaml": "8.0.*",
        "twig/cssinliner-extra": "^3.23",
        "twig/extra-bundle": "^3.23",
        "twig/inky-extra": "^3.23",
        "twig/twig": "^3.23"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "exclude-from-classmap": [
            "config/",
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Reports\\": "config/markup/Reports",
            "Standards\\": "config/markup/Standards",
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "auto-analyze": [
            "composer validate --strict",
            "phpcs --standard=config/markup/phpcs.xml",
            "phpstan --configuration=config/markup/phpstan.neon --memory-limit=4G --no-progress"
        ],
        "auto-deploy": [
            "bin/console lint:yaml src config --env=prod --no-interaction",
            "bin/console lint:twig src --env=prod --no-interaction",
            "bin/console lint:container --env=prod --no-interaction",
            "bin/console doctrine:migrations:sync-metadata-storage --env=prod --no-interaction",
            "bin/console doctrine:migration:migrate --env=prod --no-interaction",
            "bin/console messenger:setup-transports --env=prod --no-interaction",
            "bin/console cache:clear --env=prod --no-interaction"
        ],
        "auto-migrate": [
            "bin/console doctrine:database:create --if-not-exists --no-interaction",
            "bin/console doctrine:migrations:sync-metadata-storage --no-interaction",
            "bin/console doctrine:migrations:migrate --no-interaction",
            "bin/console messenger:setup-transports --no-interaction"
        ],
        "auto-quality": [
            "bin/console cache:clear --env=test --no-interaction",
            "bin/console logs:clear --env=test --no-interaction",
            "bin/console lint:yaml src config --env=test --no-interaction",
            "bin/console lint:twig src --env=test --no-interaction",
            "bin/console lint:container --env=test --no-interaction",
            "bin/console doctrine:mapping:info --env=test --no-interaction",
            "bin/console doctrine:database:drop --env=test --if-exists --force --no-interaction",
            "bin/console doctrine:database:create --env=test --no-interaction",
            "bin/console doctrine:migration:migrate --env=test --no-interaction",
            "bin/phpunit --no-progress"
        ],
        "auto-scripts": {
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "cache:clear": "symfony-cmd"
        },
        "debug-composer": "composer validate --strict && composer audit && composer diagnose",
        "debug-container": "bin/console lint:container --no-interaction",
        "debug-recipes": "composer symfony:recipes",
        "debug-router": "bin/console debug:router | grep -v '^  _'",
        "debug-scheduler": "bin/console debug:scheduler",
        "fix-style": "phpcbf --standard=config/markup/phpcs.xml",
        "load-fixtures": "bin/console doctrine:fixtures:load --no-interaction",
        "migration-create": "bin/console doctrine:migration:diff --nowdoc --no-interaction",
        "migration-down": "bin/console doctrine:migrations:migrate prev --no-interaction",
        "migration-up": "bin/console doctrine:migrations:migrate --no-interaction",
        "post-install-cmd": "@auto-scripts",
        "post-update-cmd": "@auto-scripts"
    },
    "scripts-descriptions": {
        "auto-analyze": "Analyze code quality with Composer, PHPCS, and PHPStan",
        "auto-deploy": "Perform a full production deployment of the application",
        "auto-migrate": "Run database migrations and configure messenger transports",
        "auto-quality": "Run full quality assurance checks",
        "auto-scripts": "Install assets and clear the application cache",
        "debug-composer": "Check Composer dependencies for security advisories",
        "debug-container": "Show all registered services in the container",
        "debug-recipes": "Show installed and available Symfony recipes",
        "debug-router": "Show all application routes",
        "debug-scheduler": "Show registered cron tasks and their next run times",
        "fix-style": "Fix PHP code style issues automatically",
        "load-fixtures": "Load database fixtures",
        "migration-create": "Generate a new migration from schema changes",
        "migration-down": "Revert the last database migration",
        "migration-up": "Apply pending database migrations"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "8.0.*"
        }
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^4.3",
        "fakerphp/faker": "^1.24",
        "opis/json-schema": "^2.6",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/browser-kit": "8.0.*",
        "symfony/debug-bundle": "8.0.*",
        "symfony/web-profiler-bundle": "8.0.*"
    }
}
